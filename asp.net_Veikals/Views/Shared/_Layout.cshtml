    @using System.Security.Claims


    <aside>
        <div class="sidebar">
            <div class="item">
                <span class="material-symbols-outlined">
                    density_medium
                </span>
                <div class="text"><a asp-area="" asp-controller="Home" asp-action="index">Sākums</a></div>
            </div>
            <hr />
            <div class="item">
                <span class="material-symbols-outlined">
                    view_timeline
                </span>
                <div class="text"><a asp-area="" asp-controller="Product" asp-action="ShopCategory">Jaunumi</a></div>
            </div>
            <div class="item">
                <span class="material-symbols-outlined">
                    call
                </span>
                <div class="text"><a asp-area="" asp-controller="Home" asp-action="contact">Kontakti</a></div>
            </div>
            <div class="item">
                <span class="material-symbols-outlined">
                    travel_explore
                </span>
                <div class="text"><a asp-area="" asp-controller="Home" asp-action="support">Atbalsts</a></div>
            </div>
            <div class="item">
                <span class="material-symbols-outlined">
                    travel_explore
                </span>
                <div class="text"><a asp-area="" asp-controller="Home" asp-action="homework">Mājasdarbi</a></div>
            </div>
            <div class="item">
                <span class="material-symbols-outlined">
                    account_circle
                </span>
                <div class="text">
                    @if (User.Identity.IsAuthenticated)
                    {
                        var isAdmin = User.HasClaim("IsAdmin", "True");

                        if (isAdmin)
                        {
                            <a asp-controller="Home" asp-action="admin_acc">Administratora kots</a>
                        }
                        else
                        {
                            <a asp-controller="Home" asp-action="user_acc">Mans konts</a>
                        }
                    }
                    else
                    {
                        <a asp-controller="Home" asp-action="acc">Konts</a>
                    }
                    
                </div>
            </div>
            <div class="item">
                <div class="text">
                    @if (true)
                    {
                        System.Diagnostics.Debug.WriteLine($"Identity loaded");
                    }

                    @if (User.Identity.IsAuthenticated)
                    {
                        System.Diagnostics.Debug.WriteLine("Identity confirmed");
                        <p class="nav-item">
                            <span class="nav-link">Sveiki, </span>
                            <span class="nav-link">@User.Identity.Name!</span>
                        </p>
                        <p class="nav-item">
                            <form asp-action="Logout" asp-controller="Account" method="post">
                                <button type="submit" class="btn btn-link nav-link">Iziet</button>
                            </form>
                        </p>
                    }
                    else{
                        <p></p>
                    }
                </div>
            </div>
        </div>
    </aside>





